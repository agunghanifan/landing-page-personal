@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        /* === LinkedIn Color Palette === */
        :root {
            --linkedin-blue: #0A66C2;
            --linkedin-dark: #004182;
            --linkedin-bg: #F3F6F8;
            --white: #fff;
            --text-main: #191919;
            --section-radius: 18px;
        }

        body {
            background: #F3F6F8;
            color: var(--text-main);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
        }
        section {
            background: #fff;
            border-radius: 10px;
            margin-bottom: 2.5rem;
            padding: 3rem 0;
            box-shadow: 0 2px 8px rgba(10, 102, 194, 0.03);
        }
        .section-title {
            color: var(--linkedin-blue);
        }
        .section-title:after {
            background: var(--linkedin-blue);
        }
        /* Remove individual section backgrounds, border-radius, and box-shadows */
        .hero-section,
        .about-section,
        .skills-section,
        .experience-section,
        .contact-section {
            background: none;
            border-radius: 0;
            box-shadow: none;
            margin-bottom: 0;
            padding: 0;
        }
        /* Add spacing for the first and last section */
        section:first-of-type {
            margin-top: 2.5rem;
        }
        section:last-of-type {
            margin-bottom: 2.5rem;
        }

        /* Hero Section */
        .hero-section {
            background: var(--white);
            border-radius: var(--section-radius);
            margin-top: 2rem;
            padding: 3rem 0;
            box-shadow: 0 10px 30px rgba(0,0,0,0.07);
        }
        .profile-image-container {
            position: relative;
            display: inline-block;
        }
        .profile-image {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border: 5px solid var(--white);
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            transition: transform 0.3s ease;
        }
        .profile-image:hover {
            transform: scale(1.05);
        }
        .social-links {
            margin-top: 2rem;
        }
        .social-link {
            display: inline-block;
            margin: 0 15px;
            font-size: 1.5rem;
            color: var(--linkedin-blue);
            transition: all 0.3s ease;
        }
        .social-link:hover {
            color: var(--linkedin-dark) !important;
            transform: translateY(-3px);
        }

        /* About Section */
        .about-section {
            background: var(--white);
            border-radius: var(--section-radius);
            box-shadow: 0 4px 24px rgba(10, 102, 194, 0.06);
        }
        .about-text {
            color: var(--linkedin-dark);
        }

        /* Skills Section */
        .skills-section {
            background: var(--white);
            border-radius: var(--section-radius);
            box-shadow: 0 4px 24px rgba(10, 102, 194, 0.06);
        }
        .skill-card {
            background: var(--linkedin-bg);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.03);
            transition: transform 0.3s ease;
            margin-bottom: 1.5rem;
        }
        .skill-card:hover {
            transform: translateY(-5px);
        }
        .skill-item {
            padding: 0.5rem 0;
            border-bottom: 1px solid #e6e9ec;
            transition: all 0.3s ease;
        }
        .skill-item:hover {
            padding-left: 10px;
            color: var(--linkedin-blue);
        }

        /* Experience Section */
        .experience-section {
            background: var(--white);
            border-radius: var(--section-radius);
            box-shadow: 0 4px 24px rgba(10, 102, 194, 0.06);
        }
        .timeline-item {
            margin-bottom: 2rem;
            padding-left: 1.5rem;
            border-left: 2px solid #e6e9ec;
            transition: all 0.3s ease;
        }
        .timeline-item:hover {
            border-left-color: var(--linkedin-blue);
            padding-left: 2rem;
        }

        /* Contact Section */
        .contact-section {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding-top: 3rem;
            padding-bottom: 3rem;
            min-height: 50vh;
            background: var(--white);
            border-radius: var(--section-radius);
            box-shadow: 0 8px 32px rgba(10, 102, 194, 0.07);
        }
        .contact-section h2.section-title {
            color: var(--linkedin-blue);
            margin-bottom: 1.5rem;
        }
        .contact-section p {
            font-size: 1.2rem;
            color: var(--linkedin-dark);
            margin-bottom: 2rem;
        }
        .contact-btn {
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1rem;
            background: var(--linkedin-blue);
            color: #fff;
            border: none;
            box-shadow: 0 4px 16px rgba(10, 102, 194, 0.15);
            transition: all 0.3s cubic-bezier(.4,2,.3,1);
        }
        .contact-btn:hover {
            background: var(--linkedin-dark);
            color: #fff;
            transform: translateY(-3px) scale(1.04);
            box-shadow: 0 8px 24px rgba(10, 102, 194, 0.22);
        }

        /* Animations */
        .animate-text {
            animation: fadeInUp 1s ease;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .hero-section {
                margin-top: 1rem;
                padding: 2rem 0;
            }

            .profile-image {
                width: 120px;
                height: 120px;
            }

            .section-title {
                font-size: 1.8rem;
            }

            .skill-card {
                margin-bottom: 1rem;
            }
        }

        @@media (max-width: 576px) {
            .social-link {
                margin: 0 10px;
                font-size: 1.3rem;
            }

            .contact-btn {
                padding: 0.6rem 1.5rem;
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    const navbarHeight = document.querySelector('.navbar').offsetHeight;
                    const targetPosition = targetElement.getBoundingClientRect().top + window.pageYOffset - navbarHeight;
                    
                    window.scrollTo({
                        top: targetPosition,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Add active class to current section in navbar
        window.addEventListener('scroll', function() {
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-link');
            
            let current = '';
            
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.clientHeight;
                if (section.getAttribute('id') === 'contact') {
                    if (window.pageYOffset >= sectionTop - window.innerHeight / 2) {
                        current = section.getAttribute('id');
                    }
                } else {
                    if (window.pageYOffset >= sectionTop - 100) {
                        current = section.getAttribute('id');
                    }
                }
            });
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${current}`) {
                    link.classList.add('active');
                }
            });
        });
    </script>
}
